<h1>Listing students</h1>
 <td><%= link_to 'New student', new_student_path %></td>
<td><%= search_form_for @q, url:students_path do |form| %></td>
  <div class="form-group">
   <%= form.label :search_by_name %>
   <%= form.text_field :name_cont %>
  </div>

  <div class="form-group">
    <%= form.submit 'search student',class:"btn btn-primary btn-lg" %>
  </div>
 <% end %>
 <thead>
<table>
  <tr>
    <th>Name</th>
    <th>Rollno</th>
  </tr>
</thead>
  <tbody>
    
    <% @students.each do |student| %>
    
    <tr>
      <td><%= student.name %></td>
      <td><%= student.rollno %></td>
      <td><%= link_to 'Show', student_path(student) %></td>
      <td><%= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Delete', student_path(student) ,
       method: :delete,data: {confirm: 'Are you sure?'} %></td>
    </tr>
   <% end %>
 
  
   </tbody>

</table>